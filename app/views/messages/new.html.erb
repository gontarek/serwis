<div class="jumbotron">
<h2>Contact us</h2>
<%= form_for @message, url: contact_path, :html => { :class => 'form-horizontal' } do |m| %>
    <div class="form-group">
      <%= m.label :subject, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_field :subject, placeholder: "Subject", :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= m.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_field :name, placeholder: "Name", :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= m.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
       <%= m.email_field :email, placeholder: "Email", :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= m.label :content, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_area :content, placeholder: "Message", :class => 'form-control' %>
      </div>
    </div>
  
  
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= m.submit :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>