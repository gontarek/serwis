<% if @reservation.errors.any? %>
    <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert">&times;</a>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
<% end %>

<div class="jumbotron">
<h2>Umów swoją wizytę w serwisie!</h2>
<p>W celu dokonania rezerwacji proszę wypełnić wszystkie pola poniżej.</p>
<%= form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="form-group">
    <%= f.label :name, '*Imię i nazwisko:', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">    
      <%= f.text_field :name, placeholder: "Imię i nazwisko", :class => 'form-control' %><br />
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :email, '*E-mail:', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, placeholder: "Twój e-mail", :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, '*Numer telefonu:', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone, placeholder: "Nr kontaktowy", :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :desc, 'Opis usługi:', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">   
      <%= f.text_field :desc, placeholder: "Wybrana usługa/opis problemu z pojazdem", :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date, '*Kiedy chcesz przyjechać?', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">   
      <%= f.text_field :date, placeholder: "Format: RRRR-MM-DD GG:mm", :class => 'form-control', :id => 'datetimepicker4', :default => Date.tomorrow %><br />
    </div>
    <script type="text/javascript">
            $(function () {
                $('#datetimepicker4').datetimepicker({
                  format: 'YYYY-MM-DD HH:mm',
                  sideBySide: true,
                  minDate: moment()
                });
            });
        </script>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :value => "Wyślij rezerwację!", :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
<p>* - required fields.</p>

<%= render 'layouts/links' %>

</div>
