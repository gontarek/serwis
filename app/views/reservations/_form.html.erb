<% if @reservation.errors.any? %>
    <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert">&times;</a>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
<% end %>

<div class="jumbotron">
<%= form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone, :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">    
      <%= f.text_field :name, :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :desc, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">   
      <%= f.text_field :desc, :class => 'form-control' %><br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">   
      <%= f.text_field :date, :class => 'form-control', :default => Date.tomorrow, 'data-behaviour' => 'datepicker' %><br />
    <script type="text/javascript">
      $('[data-behaviour~=datepicker]').datepicker();
    </script>
    </div>
  </div>

  <div class="form-group">
  <%= f.label :date %>
  <%= f.time_select :date, {start_hour: 9, end_hour: 17, minute_step: 30} %><br />
 </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>
